    </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/info_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:padding="16dp"
            android:text="@string/others_information_text"
            android:textSize="16sp"
            android:fontFamily="@font/fredoka"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/battery_card_view" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/others_save"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Save"
            android:textColor="@color/green_third"
            android:background="@drawable/save_button_green_bg"
            app:layout_constraintEnd_toEndOf="@+id/battery_card_view"
            app:layout_constraintStart_toStartOf="@+id/battery_card_view"
            app:layout_constraintTop_toBottomOf="@+id/battery_card_view" />
